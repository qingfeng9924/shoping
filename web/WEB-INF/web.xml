<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>ToLoginServlet</servlet-name>
        <servlet-class>com.cn.shopping.html.ToLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ToLoginServlet</servlet-name>
        <url-pattern>/toLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogServlet</servlet-name>
        <servlet-class>com.cn.shopping.user.UserLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ToHomeServlet</servlet-name>
        <servlet-class>com.cn.shopping.html.ToHomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ToHomeServlet</servlet-name>
        <url-pattern>/toHome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.cn.shopping.user.UserRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ToRegisterServlet</servlet-name>
        <servlet-class>com.cn.shopping.html.ToRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToRegisterServlet</servlet-name>
        <url-pattern>/toRegister</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userLoginServlet</servlet-name>
        <servlet-class>com.cn.shopping.user.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userLoginServlet</servlet-name>
        <url-pattern>/userLoginServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GoodsClassSearchServlet</servlet-name>
        <servlet-class>com.cn.shopping.goods.GoodsClassSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoodsClassSearchServlet</servlet-name>
        <url-pattern>/goodsClassSearchServlet</url-pattern>
    </servlet-mapping>
    
</web-app>